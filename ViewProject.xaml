<Window x:Class="SistemaProyecto.ViewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaProyecto"
        mc:Ignorable="d"
        Title="ViewProject" Height="400" Width="450">
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" >
        <Label Content="Crear Proyecto" HorizontalAlignment="Center" Margin="0,47,0,0" VerticalAlignment="Top" Height="37" Width="194" FontFamily="Arial Black" FontSize="22"/>
        <TextBox Name ="Nombre" HorizontalAlignment="Center" Margin="0,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Height="28" PreviewTextInput="Nombre_PreviewtextInput"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="146,111,0,0" VerticalAlignment="Top" Height="39" Width="70" FontSize="15"/>
        <ComboBox Name="Estado" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" Width="154" Height="28" SelectedIndex="0" SelectionChanged="Estado_SelectionChanged"/>
        <Label Content="Estado" HorizontalAlignment="Left" Margin="146,198,0,0" VerticalAlignment="Top" Height="39" Width="70" FontSize="15"/>
        <Button Content="Crear" HorizontalAlignment="Center" Margin="0,299,0,0" VerticalAlignment="Top" Height="30" Width="158" FontSize="14" Click="CreatedProject" Background="#FFDC8720"/>
        <Button Content="Atrás" HorizontalAlignment="Left" Margin="34,25,0,0" VerticalAlignment="Top" Height="39" Width="54" Click="Back" Background="#FFDC8720" FontSize="16"/>

    </Grid>
</Window>
